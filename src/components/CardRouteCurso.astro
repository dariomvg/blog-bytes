---
import "../styles/card-course.css";
import { Image } from 'astro:assets';
const { item } = Astro.props
const { title, autor, text, icon, link, docs } = item; 
---


    <div class="card-route-curso">
        <div class="details-curso">
          <h2 class="title-curso">{title}</h2>
          {icon ? (
            <Image
              src={icon}
              alt={title}
              width={30}
              height={30}
              class="icon-curso"
              loading="lazy"
            />
          ) : null}
        </div>
        <p class="autor-curso"><b>Autor:</b> {autor}</p>
        <p class="text-curso">{text}</p>
        <div class="links-curso">
          <a href={docs} target="_BLANK" class="link-curso">
            Documentaci√≥n
          </a>
          <a href={link} target="_BLANK" class="link-curso">
            Curso
          </a>
        </div>
    </div>
