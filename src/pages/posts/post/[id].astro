---
import ViewPost from "../../../components/ViewPost";
import ArticlesLayout from "../../../layouts/ArticlesLayout.astro";
import { url_api, user_id } from "../../../utils/options";
const { id } = Astro.params;
const result = await fetch(`${url_api}/post?id=${id}&user_id=${user_id}`);
const post = await result.json();
---

<ArticlesLayout 
    title={post[0].title} 
    description={post[0].description} 
    keyboards={post[0].keyboards}>

    <ViewPost client:load post={post[0]} />

</ArticlesLayout>